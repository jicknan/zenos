#2007.12.13

run_hook ()
{
    #!!! --- unionfs specific
    # Need unionfs module
    /bin/modprobe unionfs
    ovlmnt="ro"
    bropt="dirs="
    sqfmnt="ro"
    utype="unionfs"
}
